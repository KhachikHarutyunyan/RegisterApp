extends layout
block content
    .container
        .row
            .col-md-8
                h1 Login Form
                form(action="/users/login", method="POST")
                    #form-group
                        label Username:
                        input.form-control(type="text", name='username')
                    #form-group
                        label Password:
                        input.form-control(type="password", name='password')
                    input.btn.btn-primary(type="submit", value='Submit')

